<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="rod_layout">
            <div class="header">
                <div class="row">
                    <table class="table table-bordered" style="width:100%;">
                        <tr>
                            <td style="width:20%" rowspan="7">
                                <center><img t-att-src="'/rod_account_coa/static/src/img/coaa.png'" style="width:150px;"/></center>
                            </td>
                            <td style="width:60%"><center>COOPERATIVA DE AHORRO Y CREDITO DE VINCULO LABORAL</center></td>
                            <td style="width:20%" rowspan="7"><center><span t-field="o.name" style="color:red;font-weight:bold;"/></center></td>
                        </tr>
                        <tr>

                            <td><center>"COA-4 DE DICIEMBRE" R.L.</center></td>

                        </tr>
                        <tr>

                            <td><center>Mezzanine Of. 09 - Telf./Fax: 2420530</center></td>

                        </tr>
                        <tr>

                            <td><center>Av. Ecuador N 738</center></td>

                        </tr>
                        <tr>

                            <td><center>La Paz - Bolivia</center></td>

                        </tr>
                        <tr>
                            <td style="font-size:25px;font-weight:bold;"><center>COMPROBANTE DE <span t-field="o.journal_id.name"/></center></td>
                        </tr>

                    </table>

                </div>
            </div>
            <div class="article o_report_layout_standard">
                <t t-out="0"/>
            </div>
            <div class="footer o_standard_footer">
                <div class="row">
                    <table class="table table-bordered" style="width:100%;">
                        <tr>
                            <td rowspan="4" style="width:20%;"></td>
                            <td rowspan="4" style="width:20%;"></td>
                            <td rowspan="4" style="width:20%;"></td>
                            <td style="width:20%;">
                                Firma:
                            </td>
                        </tr>
                        <tr>
                            <td rowspan="2" style="height:60px;">Nombre y Apellido:</td>
                        </tr>
                        <tr>

                        </tr>
                        <tr>
                            <td>C.I.:</td>
                        </tr>
                        <tr>
                            <th>
                                <center>OPERADOR</center>
                            </th>
                            <th>
                                <center>GERENTE GENERAL</center>
                            </th>
                            <th>
                                <center>PRESIDENTE</center>
                            </th>
                            <th>
                                <center>INTERESADO</center>
                            </th>
                        </tr>
                    </table>
                </div>
            </div>
        </template>
        <template id="report_pdf_account_move">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page body">
                        <t t-call="rod_account_coa.rod_layout">
                            <div>
                                <br/>
                                <ul>
                                    <li>
                                        LUGAR Y FECHA:
                                        <strong>La Paz,
                                            <span t-field="o.date"/>
                                        </strong>
                                    </li>
                                    <li>
                                        CONCEPTO:
                                        <span t-field="o.ref"/>
                                    </li>
                                </ul>
                            </div>
                            <div>
                                <table class="table table-striped" style="width:100%;">
                                    <thead>
                                        <tr style="text-align:center;">
                                            <th>
                                                <strong>CODIGO</strong>
                                            </th>
                                            <th>
                                                <strong>DETALLE</strong>
                                            </th>
                                            <th>
                                                <strong>PARCIAL</strong>
                                            </th>
                                            <th>
                                                <strong>DEBE</strong>
                                            </th>
                                            <th>
                                                <strong>HABER</strong>
                                            </th>
                                        </tr>
                                    </thead>

                                    <t t-foreach="o.line_ids" t-as="p">
                                        <t t-set="total_parcial" t-value="0"/>
                                        <tr style="font-size:12px;">
                                            <td style="text-align:center;">
                                                <span t-field="p.account_id.code"/>
                                            </td>
                                            <td>
                                                <ul style="list-style:none;">
                                                    <li>
                                                        <span t-field="p.account_id.name"/>
                                                    </li>
                                                    <li>
                                                        <span t-field="p.partner_id.name"/>
                                                    </li>
                                                </ul>

                                            </td>
                                            <td style="text-align:center;">
                                                <span t-field="p.parcial"/>
                                            </td>
                                            <td style="text-align:center;">
                                                <span t-field="p.debit"/>
                                            </td>
                                            <td style="text-align:center;">
                                                <span t-field="p.credit"/>
                                            </td>
                                        </tr>

                                    </t>
                                    <tr style="font-size:12px;">
                                        <td>

                                        </td>
                                        <td style="text-align:right;font-weight:bold;">
                                            TOTALES
                                        </td>
                                        <td style="text-align:center;">
                                            <t t-set="total_parcial" t-value="total_parcial + p.parcial"/>
                                            <t t-esc="total_parcial"/>
                                        </td>
                                        <td style="text-align:center;">
                                            <span t-field="o.amount_total"/>
                                        </td>
                                        <td style="text-align:center;">
                                            <span t-field="o.amount_total"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div>
                                <p>
                                    <strong>GLOSA:</strong>
                                </p>
                                <p>
                                    <span t-field="o.glosa"/>
                                </p>
                            </div>
                            <div>
                                <table class="table" style="width:100%;" >
                                    <tr>
                                        <th>LA SUMA DE:</th>
                                        <th>
                                            <span t-esc="o.literal_number"/>
                                        </th>
                                    </tr>
                                    <tr>
                                        <th>NUMERO DE CHEQUE:</th>
                                        <th></th>
                                    </tr>
                                </table>
                            </div>


                            <div class="oe_structure"/>
                        </t>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
