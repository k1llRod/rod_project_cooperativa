<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_account_payment_form_inh">
            <field name="name">account.payment.form.inh</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="string">Socio</attribute>
                </xpath>
                <xpath expr="//group[@name='group1']/field[@name='partner_id'][1]" position="after">
                    <field name="partner_number_account" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
