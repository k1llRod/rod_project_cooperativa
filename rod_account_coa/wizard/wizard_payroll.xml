<odoo>
    <data>
        <!-- Vista del wizard -->
        <record id="wizard_payroll_id" model="ir.ui.view">
            <field name="name">wizard.payroll.form.wizard</field>
            <field name="model">wizard.payroll</field>
            <field name="arch" type="xml">
                <form string="Your Wizard">
                    <group>
                        <group>
                            <field name="account_move_id" readonly="1"/>
                            <field name="date" />
                            <field name="period" readonly="1"/>
                            <field name="account_journal_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="account_income_id"/>
                            <field name="total_income" readonly="1"/>
                        </group>
                        <group>
                            <field name="account_inscription_id"/>
                            <field name="total_miscellaneous_income" readonly="1"/>
                            <field name="account_regulation_cup_id"/>
                            <field name="total_regulation_cup" readonly="1"/>
                            <field name="account_mandatory_contribution_id"/>
                            <field name="total_mandatory_contribution" readonly="1"/>
                            <field name="account_voluntary_contribution_id"/>
                            <field name="total_voluntary_contribution" readonly="1"/>
                            <field name="amount_total" readonly="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_confirm" string="Confirmar" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
