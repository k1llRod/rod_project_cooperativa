<odoo>
  <data>
    <!-- explicit list view definition -->
      <record model="ir.ui.view" id="auxiliar_partners_form_id">
          <field name="name">Lista de condecorados</field>
          <field name="model">auxiliar.partners</field>
          <field name="arch" type="xml">
              <tree>
                  <field name="name"/>
                  <field name="grade"/>
                  <field name="date"/>
                  <field name="partner_id"/>
              </tree>
          </field>
      </record>
      <record model="ir.ui.view" id="auxiliar_partners_tree_id">
          <field name="name">Formulario de condecorados</field>
          <field name="model">auxiliar.partners</field>
          <field name="arch" type="xml">
              <form string="Condecorado">
                  <sheet>
                      <group>
                          <group string="Datos personales">
                              <div class="oe_title">
                                  <h1>
                                      <field name="name"/>
                                  </h1>
                              </div>
<!--                              <field name="name" readonly="1"/>-->
                              <field name="grade"/>
                              <field name="date"/>
                              <field name="partner_id"/>

                          </group>
                      </group>
                      <notebook>
                          <page string="Condecoraciones">
                              <field name="decoration_ids">
                                  <tree >
                                      <field name="name"/>
                                      <field name="description"/>
                                      <field name="date"/>
                                      <field name="gestion"/>
                                      <field name="type_decoration"/>
                                      <field name="resolution_ids"/>
                                      <field name="file_name" invisible="1"/>
                                      <field name="archive_decoration" filename="file_name" widget="binay" options='{"widget": "binary"}'/>
                                  </tree>
                              </field>
                          </page>
                      </notebook>
                  </sheet>
              </form>
          </field>
      </record>

