<!--                            domain="[('partner_status_especific','=','passive_reserve_b')]"/>-->

                    <group expand="0" string="Group By">
                        <filter string="Gestion"
                                name="group_gestion"
                                context="{'group_by': 'gestion'}"/>
                        <filter string="Tipo de condecoracion"
                                name="group_type_decoration"
                                context="{'group_by': 'type_decoration'}"/>
                    </group>
                </search>
            </field>
        </record>

      <!-- actions opening views on models -->
