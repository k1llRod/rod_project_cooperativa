<odoo>
  <data>
    <!-- explicit list view definition -->
      <record model="ir.ui.view" id="decoration_partners_tree_id">
          <field name="name">Lista de condecoraciones</field>
          <field name="model">decoration.partners</field>
          <field name="arch" type="xml">
              <tree>
                  <field name="name" readonly="1"/>
                  <field name="name_partner_decoration"/>
                  <field name="description"/>
                  <field name="date"/>
                  <field name="gestion"/>
                  <field name="partner_id" invisible="1"/>
                  <field name="type_decoration"/>
                  <field name="resolution_ids"/>
              </tree>
          </field>
      </record>
      <record model="ir.ui.view" id="decoration_partners_form_id">
          <field name="name">decoration.form</field>
          <field name="model">decoration.partners</field>
          <field name="arch" type="xml">
              <form string="Nueva condecoracion">
                  <sheet>
                      <group string="Datos condecoracion">
                          <div class="oe_title">
                              <h1>
                                  <field name="name" readonly="1"/>
                              </h1>
                          </div>
                          <!--                              <field name="name" readonly="1"/>-->
                          <field name="description"/>
                          <field name="date"/>
                          <field name="gestion"/>
                          <field name="type_decoration"/>
<!--                          <field name="archive_decoration" filename="file_name"/>-->
                          <field name="resolution_ids"/>
                      </group>
                  </sheet>
              </form>
          </field>
      </record>

      <record id="decoration_partners_search_id" model="ir.ui.view">
            <field name="name">decoration.partners.search</field>
            <field name="model">decoration.partners</field>
            <!--            <field name="inherit_id" ref="base.view_res_partner_filter"/>-->
            <field name="arch" type="xml">
                <search string="Buscar">
                    <field name="name_partner_decoration"/>
