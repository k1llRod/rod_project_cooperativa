<odoo>
    <data>
        <!-- Vista Ãrbol de Modelo loan application -->
        <record model="ir.ui.view" id="external_partner_tree_id">
            <field name="name">external.partner.tree</field>
            <field name="model">external.partner</field>
            <field name="arch" type="xml">
                <tree>
                    <header>
<!--                        <button name="import_loan" string="Conciliar" class="oe_highlight" type="object" groups="rod_cooperativa.group_rod_cooperativa_administrator"/>-->
<!--                        <button name="massive_approve_loan" string="Aprobacion masiva" type="object" groups="rod_cooperativa.group_rod_cooperativa_administrator"/>-->
                    </header>
                    <field name="name"/>
                    <field name="paternal_surname" readonly="1"/>
                    <field name="maternal_surname"/>
                    <field name="name_contact"/>
                    <field name="code_external_contact"/>
                    <field name="ci"/>
                    <field name="mobile"/>
                </tree>
            </field>
        </record>

        <!-- Vista Formulario loan.application  -->

        <record model="ir.ui.view" id="external_partner_form_id">
            <field name="name">external.partner.form</field>
            <field name="model">external.partner</field>
            <field name="arch" type="xml">
                <form string="Solicitud de prestamo de servicio" class="oe_left oe_edit_only oe_form_required" create="0">
                    <header>
                        <button name="enable_loan" string="Habilitar prestamo" class="oe_highlight" type="object" attrs="{'invisible': [('state','!=','active')]}"/>
                        <button name="action_state_active" string="Activar" class="oe_highlight" type="object" attrs="{'invisible': [('state','=','active')]}"/>
                        <button name="action_state_rechazado" string="Rechazar" type="object" attrs="{'invisible': [('state','=','Rechazado')]}" />
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" icon="fa-user" class="oe_stat_button"
                                    name="action_view_loans">
                                <div class="o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="loan_count"/>
                                    </span>
                                    <span class="o_stat_text">Prestamos S.</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" string="Nombre" />
                            </h1>
                        </div>
                        <group>
                            <group string="Solicitante">
                                <field name="partner_id"/>
                                <field name="name_contact" default_focus="1"/>
                                <field name="paternal_surname" />
                                <field name="maternal_surname" />
                                <field name="code_external_contact"/>
                                <field name="ci"/>
                                <field name="mobile"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Prestamos de consumo">
                                <field name="loan_service_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="external_partner_kanban" model="ir.ui.view">
            <field name="name">external.partner.kanban</field>
            <field name="model">external.partner</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_example">
                <field name="code_external_partner"/>
                <field name="name"/>
                <field name="name_contact"/>
                <field name="paternal_surname"/>
                <field name="maternal_surname"/>
                <field name="code_external_contact"/>
                <field name="ci"/>
                <field name="mobile"/>
                <field name="state"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                            <div class="o_kanban_details d-flex flex-column">
                                <strong class="o_kanban_record_title">
                                    <b><t t-esc="record.code_external_partner.value"/></b>
                                </strong>
                                <strong class="o_kanban_record_title">
                                    <b><t t-esc="record.name.value"/></b>
                                </strong>
                                <div>
                                    <span>
                                        <b>CI:</b>
                                        <t t-esc="record.ci.value"/>
                                    </span>
                                </div>
                                <div>
                                    <span>
                                        <b>Mobile:</b>
                                        <t t-esc="record.mobile.value"/>
                                    </span>
                                </div>
                                <div>
                                    <span>
                                        <b>State:</b>
                                        <t t-esc="record.state.value"/>
                                    </span>
                                </div>
                            </div>
                            <div class="o_row">
                                        <span class="oe_kanban_partner_links"/>
                                    </div>
                            <footer>
<!--                                <button type="button" class="btn btn-secondary btn-sm">-->
<!--                                    <t t-esc="record.state.value"/>-->
<!--                                </button>-->
                            </footer>
                        </div>
                    </t>
                </templates>
                </kanban>
            </field>
        </record>

        <record id="external_partner_view_search" model="ir.ui.view">
            <field name="name">external.partner.view.search</field>
            <field name="model">external.partner</field>
            <!--            <field name="inherit_id" ref="base.view_res_partner_filter"/>-->
            <field name="arch" type="xml">
                <search string="Buscar asociados">
                    <field name="code_external_contact"/>
                    <!--                    <field name="vat" string="C.I."/>-->
<!--                    <field name="partner_id"/>-->
                    <!--                    <filter name="quantity_capital_initial"-->
                    <!--                            string="Capital inicial"-->
                    <!--                            domain="[('capital_initial', '!=', 0)]"/>-->
                    <separator />

                </search>
            </field>
        </record>
        <!-- Accion para visualizar loan.application -->
        <record id="action_external_partner" model="ir.actions.act_window">
            <field name="name">Solicitantes prestamo de servicio</field>
            <field name="res_model">external.partner</field>
            <field name="view_mode">kanban,tree,form,pivot</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear registros.
                </p>
            </field>
        </record>

    </data>
</odoo>