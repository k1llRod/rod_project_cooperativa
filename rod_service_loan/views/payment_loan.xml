<odoo>
    <data>
        <!-- Vista Árbol de Modelo loan application -->
        <record model="ir.ui.view" id="loan_payment_tree_id">
            <field name="name">loan.payment.tree</field>
            <field name="model">payment.loan</field>
            <field name="arch" type="xml">
                <tree>
                    <header>
<!--                        <button name="import_loan" string="Conciliar" class="oe_highlight" type="object" groups="rod_cooperativa.group_rod_cooperativa_administrator"/>-->
<!--                        <button name="massive_approve_loan" string="Aprobacion masiva" type="object" groups="rod_cooperativa.group_rod_cooperativa_administrator"/>-->
                    </header>
                    <field name="name"/>
                    <field name="service_loan_id" readonly="1" invisible="1"/>
                    <field name="amount" readonly="1" invisible="1"/>
                    <field name="interest"/>
                    <field name="payment_date"/>
                    <field name="state" decoration-warning="state == 'draft'" decoration-success="state == 'approved'" decoration-danger="state == 'paid'" widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- Vista Formulario loan.application  -->

        <record model="ir.ui.view" id="loan_payment_form_id">
            <field name="name">loan.payment.form</field>
            <field name="model">payment.loan</field>
            <field name="arch" type="xml">
                <form string="Pago de prestamo" class="oe_left oe_edit_only oe_form_required" create="0">
                    <header>
<!--                        <button name="action_confirmation" string="Confirmar" class="oe_highlight" type="object" />-->
<!--                        <button name="approval_state" string="Aprobar prestamo" class="oe_highlight" type="object" attrs="{'invisible': [('state','!=','verificate')]}" groups="rod_cooperativa.group_rod_cooperativa_administrator"/>-->
<!--                        <button name="refinance" string="Refinanciar" type="object" attrs="{'invisible': [('state','!=','progress')]}" groups="rod_cooperativa.group_rod_cooperativa_administrator,rod_cooperativa.group_rod_cooperativa_operator"/>-->
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" string="Codigo" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Pagos de prestamo">
                                <field name="service_loan_id" readonly="1"/>
                                <field name="amount"/>
                                <field name="interest"/>
                                <field name="payment_date"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

