<odoo>
    <data>
        <!-- Vista Árbol de Modelo loan application -->
        <record model="ir.ui.view" id="service_loan_tree_id">
            <field name="name">service.loan.tree</field>
            <field name="model">service.loan</field>
            <field name="arch" type="xml">
                <tree>
                    <header>
<!--                        <button name="import_loan" string="Conciliar" class="oe_highlight" type="object" groups="rod_cooperativa.group_rod_cooperativa_administrator"/>-->
<!--                        <button name="massive_approve_loan" string="Aprobacion masiva" type="object" groups="rod_cooperativa.group_rod_cooperativa_administrator"/>-->
                    </header>
                    <field name="name"/>
                    <field name="partner_id" readonly="1" invisible="1"/>
                    <field name="external_partner_id" readonly="1" invisible="1"/>
                    <field name="name_partner"/>
                    <field name="ci_partner"/>
                    <field name="mobile_partner"/>
                    <field name="loan_date"/>
                    <field name="loan_max_amount"/>
                    <field name="amount_consumed"/>
                    <field name="state" decoration-warning="state == 'draft'" decoration-success="state == 'approved'" decoration-danger="state == 'paid'" widget="badge"/>
<!--                    <field name="interest_rate"/>-->
<!--                    <field name="payment_ids"/>-->
<!--                    <field name="total_paid" optional="hidden"/>-->
<!--                    <field name="total_interest" optional="hidden"/>-->
<!--                    <field name="total_amount" decoration-info="state == 'draft'" decoration-success="state == 'progress'" widget="badge"/>-->
                </tree>
            </field>
        </record>

        <!-- Vista Formulario loan.application  -->

        <record model="ir.ui.view" id="service_loan_form_id">
            <field name="name">service.loan.form</field>
            <field name="model">service.loan</field>
            <field name="arch" type="xml">
                <form string="Solicitud de prestamo de servicio" class="oe_left oe_edit_only oe_form_required" create="0">
                    <header>
                        <button name="action_confirmation" string="Confirmar" class="oe_highlight" type="object" />
                        <button name="action_draft" string="Borrador" class="oe_highlight" type="object" />
<!--                        <button name="refinance" string="Refinanciar" type="object" attrs="{'invisible': [('state','!=','progress')]}" groups="rod_cooperativa.group_rod_cooperativa_administrator,rod_cooperativa.group_rod_cooperativa_operator"/>-->
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" string="Nombre" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Prestamo de servicio">
                                <field name="partner_id" readonly="1"/>
                                <field name="external_partner_id" readonly="1" invisible="1"/>
                                <field name="name_partner"/>
                                <field name="ci_partner"/>
                                <field name="mobile_partner"/>
                                <field name="loan_date" />
                                <field name="loan_max_amount"/>
                                <field name="amount_consumed"/>
                            </group>
                            <group string="Datos del prestamo">
                                <field name="interest_rate"/>
                                <field name="commission_min_def" />
                                <field name="surplus_days"/>
                                <field name="monthly_interest"/>
                                <field name="interest_month_surpluy"/>
                                <field name="capital_month"/>
                                <field name="fixed_fee"/>
                                <field name="discount_mindef"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Registro de consumo">
                                <field name="payment_ids" >
                                    <tree editable="bottom">
                                        <field name="name" readonly="1"/>
                                        <field name="date"/>
                                        <field name="detail"/>
                                        <field name="amount" sum="Total"/>
                                        <field name="state" decoration-info="state == 'draft'" decoration-success="state == 'paid'" widget="badge"/>
                                        <button name="open_service_loan_payment" type="object" class="oe_highlight"
                                                icon="fa-eye"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Pago de prestamo">
                                <field name="payment_loan_ids">
<!--                                    <tree editable="bottom">-->
<!--                                        <field name="name" readonly="1"/>-->
<!--                                        <field name="payment_date"/>-->
<!--                                        <field name="amount"/>-->
<!--                                        <field name="state" decoration-info="state == 'draft'" decoration-success="state == 'paid'" widget="badge"/>-->
<!--                                        <button name="open_service_loan_payment" type="object" class="oe_highlight"-->
<!--                                                icon="fa-eye"/>-->
<!--                                    </tree>-->
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="service_loan_view_search" model="ir.ui.view">
            <field name="name">service.loan.view.search</field>
            <field name="model">service.loan</field>
            <!--            <field name="inherit_id" ref="base.view_res_partner_filter"/>-->
            <field name="arch" type="xml">
                <search string="Buscar asociados">
                    <field name="name_partner"/>
                    <field name="code_contact"/>
                    <field name="ci_partner" string="C.I."/>



                    <!--                    <filter name="quantity_capital_initial"-->
                    <!--                            string="Capital inicial"-->
                    <!--                            domain="[('capital_initial', '!=', 0)]"/>-->
                    <separator />

                </search>
            </field>
        </record>

        <!-- Accion para visualizar loan.application -->

        <record id="action_service_loan" model="ir.actions.act_window">
            <field name="name">Solicitud de préstamos de servicio</field>
            <field name="res_model">service.loan</field>
            <field name="view_mode">tree,form,pivot</field>
        </record>

    </data>
</odoo>