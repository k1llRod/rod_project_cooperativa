<odoo>
    <data>
        <!-- Vista Ãrbol de Modelo loan application -->
        <record model="ir.ui.view" id="service_loan_payment_tree_id">
            <field name="name">service.loan.payment.tree</field>
            <field name="model">service.loan.payment</field>
            <field name="arch" type="xml">
                <tree>
                    <header>
                        <!--                        <button name="import_loan" string="Conciliar" class="oe_highlight" type="object" groups="rod_cooperativa.group_rod_cooperativa_administrator"/>-->
                        <!--                        <button name="massive_approve_loan" string="Aprobacion masiva" type="object" groups="rod_cooperativa.group_rod_cooperativa_administrator"/>-->
                    </header>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="detail"/>
                    <field name="amount"/>
                </tree>
            </field>
        </record>

        <!-- Vista Formulario loan.application  -->

        <record model="ir.ui.view" id="service_loan_payment_form_id">
            <field name="name">service.loan.payment.form</field>
            <field name="model">service.loan.payment</field>
            <field name="arch" type="xml">
                <form string="Detalles de consumo" class="oe_left oe_edit_only oe_form_required"
                >
                    <header>
                        <button name="action_confirm" string="Confirmar" class="oe_highlight" type="object"
                                attrs="{'invisible': [('state','=','confirm')]}"/>
                        <button name="action_draft" string="Borrador" class="oe_highlight" type="object"
                                attrs="{'invisible': [('state','=','draft')]}"
                        />
                        <!--                        <button name="refinance" string="Refinanciar" type="object" attrs="{'invisible': [('state','!=','progress')]}" groups="rod_cooperativa.group_rod_cooperativa_administrator,rod_cooperativa.group_rod_cooperativa_operator"/>-->
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" string="Nombre" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="pagos">
<!--                                <field name="loan_id" readonly="1"/>-->
                                <field name="date" default_focus="1"/>
                                <field name="detail"/>
                                <field name="amount"/>
                                <!--                                <field name="state"/>-->
                                <!--                                <field name="mobile"/>-->
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_service_loan_payment" model="ir.actions.act_window">
            <field name="name">Pago de prestamos de consumo</field>
            <field name="res_model">service.loan.payment</field>
            <field name="view_mode">tree,form,pivot</field>
        </record>

    </data>
</odoo>